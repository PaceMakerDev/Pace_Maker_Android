<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/auth_title_login"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/auth_login"
        android:paddingStart="20dp"
        android:textSize="30sp"
        android:textColor="@color/mainTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/auth_title_login"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/auth_edittext_id"
            android:background="@drawable/editview_auth_input"
            android:hint="@string/auth_hint_id"
            android:maxLength="20"
            android:textSize="15sp"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/auth_edittext_pw"
            android:inputType="textPassword"
            android:background="@drawable/editview_auth_input"
            android:hint="@string/auth_hint_pw"
            android:maxLength="20"
            android:textSize="15sp"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="50dp"/>
        
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/auth_button_signin"
            android:background="@drawable/button_filled_maintheme"
            android:textSize="15sp"
            android:text="@string/auth_signin"
            android:textColor="#ffffff" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>